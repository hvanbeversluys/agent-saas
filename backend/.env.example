# Agent SaaS Backend - Environment Variables
# Copy to .env and fill in your values

# === Application ===
ENVIRONMENT=development
DEBUG=true

# === Database ===
# SQLite (development)
DATABASE_URL=sqlite:///./agent_saas.db
# PostgreSQL (production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/agent_saas

# === Redis (optional for dev) ===
# REDIS_URL=redis://localhost:6379/0

# === Security ===
# IMPORTANT: Generate a secure key for production!
# python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=your-super-secret-key-minimum-32-characters-long

# === CORS ===
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# === LLM Providers ===
# ðŸ†“ FREE providers (recommended for dev)
# GROQ_API_KEY=gsk_...            # https://console.groq.com/ - FREE & FAST!
# GOOGLE_API_KEY=AIza...          # https://aistudio.google.com/ - Free tier
# MISTRAL_API_KEY=...             # https://console.mistral.ai/ - Free tier

# ðŸ’° Paid providers
# OPENAI_API_KEY=sk-...           # https://platform.openai.com/
# ANTHROPIC_API_KEY=sk-ant-...    # https://console.anthropic.com/

# Router settings
LLM_DEFAULT_TIER=free              # free, cheap, balanced, premium
# LLM_DEFAULT_PROVIDER=groq       # Force specific provider (optional)

# === Stripe (Billing) ===
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...
# STRIPE_PRICE_STARTER=price_...
# STRIPE_PRICE_BUSINESS=price_...
# STRIPE_PRICE_ENTERPRISE=price_...

# === Email (SMTP) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM_EMAIL=noreply@your-domain.com

# === Feature Flags ===
FEATURE_MFA_ENABLED=false
FEATURE_BILLING_ENABLED=false
FEATURE_EMAIL_VERIFICATION=false
